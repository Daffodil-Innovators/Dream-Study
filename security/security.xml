<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="access_category_dream_study" model="ir.module.category">
            <field name="name">Dream Study</field>
            <field name="parent_id" ref="base.module_category_hidden"/>
            <field name="sequence">2</field>
        </record>

        <record id="access_category_dream_study_admin" model="res.groups">
            <field name="name">Admin</field>
            <field name="category_id" ref="access_category_dream_study"/>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
        </record>

        <record id="access_category_dream_study_councilor" model="res.groups">
            <field name="name">Councilor</field>
            <field name="category_id" ref="access_category_dream_study"/>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
        </record>

        <record id="access_category_dream_study_receptionist" model="res.groups">
            <field name="name">Receptionist</field>
            <field name="category_id" ref="access_category_dream_study"/>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
        </record>

        <record id="access_category_dream_study_admission_officer" model="res.groups">
            <field name="name">Admission Officer</field>
            <field name="category_id" ref="access_category_dream_study"/>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
        </record>



        <record id="councilor_own_order_rule" model="ir.rule">
            <field name="name">Mega Restaurant Own Order</field>
            <field name="model_id" ref="dsl_golf_restaurant.model_order_request"/>
            <field name="groups" eval="[(4, ref('dsl_golf_restaurant.access_category_restaurant_east'))]"/>
            <field name="domain_force">[('waiter_id', '=', user.id)]</field>
        </record>

        <record id="receptionist_own_order_rule" model="ir.rule">
            <field name="name">Mini Restaurant Own Order</field>
            <field name="model_id" ref="dsl_golf_restaurant.model_order_request"/>
            <field name="groups" eval="[(4, ref('dsl_golf_restaurant.access_category_restaurant_west'))]"/>
            <field name="domain_force">[('waiter_id', '=', user.id)]</field>
        </record>

        <record id="admission_officer_own_order_rule" model="ir.rule">
            <field name="name">Bar Own Order</field>
            <field name="model_id" ref="dsl_golf_restaurant.model_order_request"/>
            <field name="groups" eval="[(4, ref('dsl_golf_restaurant.access_category_restaurant_bar'))]"/>
            <field name="domain_force">[('waiter_id', '=', user.id)]</field>
        </record>


        <record id="admin_order_rule" model="ir.rule">
            <field name="name">Admin</field>
            <field name="model_id" ref="dsl_golf_restaurant.model_order_request"/>
            <field name="groups" eval="[(4, ref('dsl_golf_restaurant.access_category_restaurant_admin'))]"/>
            <field name="domain_force">[(1, '=', 1)]</field>
        </record>
    </data>
</odoo>
