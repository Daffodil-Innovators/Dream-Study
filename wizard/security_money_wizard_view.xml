<odoo>
    <record id="view_security_money_wizard_form" model="ir.ui.view">
        <field name="name">security.money.wizard.form</field>
        <field name="model">security.money.wizard</field>
        <field name="arch" type="xml">
            <form string="Security Money Payment">
                <group>
                    <field name="student_id" readonly="1"/>
                    <field name="amount"/>
                </group>
                <footer>
                    <button string="Confirm" type="object" name="action_confirm_payment" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
