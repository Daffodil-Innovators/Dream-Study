<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Agent Form -->
    <record id="dsl_study_agent_form" model="ir.ui.view">
        <field name="name">dsl.study.agent.form</field>
        <field name="model">dsl.study.agent</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_confirm" class="oe_highlight" type="object"
                        string="Confirm" invisible="stage == 'approved'" />
                    <field name="stage" widget="statusbar" clickable="1" field_id="stage_0" />
                </header>
                <sheet>
                    <!-- <group> -->
                        <div class="w-100">
                            <h3>Profile Information</h3>
                            <hr />
                        </div>
                        <group>
                            <field name="agent_code" readonly="1" />
                            <group>
                                <label for="first_name" string="Name" />
                                <div
                                    style="font-size:2em; font-weight:bold; margin-bottom:10px; display:flex; gap:10px; align-items:center;">
                                    <field name="first_name" placeholder="First Name"
                                        style="font-size:1em; width:430px;" />
                                    <field name="middle_name" placeholder="Middle Name"
                                        style="font-size:1em; width:430px;" />
                                    <field name="last_name" placeholder="Last Name"
                                        style="font-size:1em; width:430px;" />
                                </div>
                            </group>
                            <group style="text-align:center; width:180px;">
                                <field name="photo" widget="image" nolabel="1"
                                    style="width:110px; height:100px;border:1px solid #ccc; border-radius:4px;" />
                            </group>
                        </group>
                        <group col="2">
                            <group>
                                <field name="agent_id" field_id="agent_id_0" />
                                
                                <field name="skype_id" field_id="skype_id_0" />
                                <field name="account_manager_id" can_create="True" can_write="True"
                                    field_id="account_manager_id_0" />
                                <field name="note" />
                            </group>
                            <group>
                               
                                <field name="email" field_id="email_0" />
                                <field name="phone_number" field_id="phone_number_0" />
                                <field name="nid" field_id="nid_0" />
                                <field name="whatsapp_id" field_id="whatsapp_id_0" />
                            </group>
                        </group>
                        <div class="w-100">
                            <h3>Business Information</h3>
                            <hr />
                        </div>
                        <group col="2">
                        <group>
                            <field name="company_name" field_id="company_name_0" />
                            <field name="website" field_id="website_0" />
                            <field name="country" can_create="True" can_write="True"
                                field_id="country_0" />
                            <field name="city" field_id="city_0" />
                            <field name="postal_code" field_id="postal_code_0" />
                        </group>
                        <group>
                            <field name="company_logo" widget="image" class="oe_avatar"
                                field_id="company_logo_0" />
                            <field name="main_source_of_students" can_create="True" can_write="True"
                                field_id="main_source_of_students_0">
                                <tree string="Country" create="0" delete="0">
                                    <field name="name" field_id="name_0" />
                                    <field name="code" field_id="code_0" />
                                </tree>
                            </field>
                            <field name="street" field_id="street_0" />
                            <field name="state" field_id="state_0" />
                            <field name="business_certificate" field_id="business_certificate_0" />
                        </group>
                        </group>
                        <div class="w-100">
                            <h3>Business Social</h3>
                            <hr />
                        </div>
                        <group>
                            <field name="facebook" field_id="facebook_0" />
                            <field name="linkedin" field_id="linkedin_0" />
                        </group>
                        <group>
                            <field name="instagram" field_id="instagram_0" />
                            <field name="twitter" field_id="twitter_0" />
                        </group>
                    <!-- </group> -->
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" />
                    <field name="activity_ids" />
                    <field name="message_ids" />
                </div>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="dsl_study_agent_tree_view" model="ir.ui.view">
        <field name="name">dsl.study.agent.tree</field>
        <field name="model">dsl.study.agent</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sl" />
                <field name="agent_code" />
                <field name="name" />
                <field name="email" />
                <field name="phone_number" />
                <field name="stage" />
            </tree>
        </field>
    </record>

    <!-- Action -->
    <record id="action_dsl_study_agent" model="ir.actions.act_window">
        <field name="name">Agents</field>
        <field name="res_model">dsl.study.agent</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="view_id" ref="dsl_study_agent_tree_view" />
        <field name="help" type="html">
            <p>Create and manage agents here.</p>
        </field>
    </record>
</odoo>