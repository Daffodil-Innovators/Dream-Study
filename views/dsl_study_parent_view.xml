<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Search view for Parent -->
        <record id="dsl_study_parent_search_view" model="ir.ui.view">
            <field name="name">dsl.study.parent.search</field>
            <field name="model">dsl.study.parent</field>
            <field name="arch" type="xml">
                <search string="Parents">
                    <field name="name" string="Parent Name" filter_domain="[('name','ilike',self)]" />
                    <field name="relation" string="Relation"
                        filter_domain="[('relation','ilike',self)]" />
                    <field name="phone" string="Phone" filter_domain="[('phone','ilike',self)]" />
                    <field name="mobile" string="Mobile" filter_domain="[('mobile','ilike',self)]" />
                    <!-- <filter string="Active" name="active_filter" domain="[('active','=',True)]"
                    default="1"/> -->

                </search>
            </field>
        </record>

        <!-- Tree view for Parent -->
        <record id="view_parent_tree" model="ir.ui.view">
            <field name="name">dsl.study.parent.tree</field>
            <field name="model">dsl.study.parent</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="code"/>
                    <field name="name" />
                    <field name="relation" />
                    <field name="phone" />
                    <field name="mobile" />
                    <field name="email" />
                    <field name="student_id" widget="many2one" />
                    <field name="company_id" />
                </tree>
            </field>
        </record>

        <!-- Form view for Parent -->
        <record id="view_parent_form" model="ir.ui.view">
            <field name="name">dsl.study.parent.form</field>
            <field name="model">dsl.study.parent</field>
            <field name="arch" type="xml">
                <form>
                    <field name="active" invisible="1" />
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="toggle_active" type="object" class="oe_stat_button"
                                icon="fa-archive" invisible="not active">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_text">Archive</span>
                                </div>
                            </button>
                            <button name="toggle_active" type="object" class="oe_stat_button"
                                icon="fa-check" invisible="active">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_text">Active</span>
                                </div>
                            </button>
                        </div>
                        <group>
                            <group>
                                <field name="code" readonly="1" />
                                <field name="name" />
                            </group>
                            <group style="text-align:center; width:180px;">
                                <field name="photo" widget="image" nolabel="1"
                                    style="width:110px; height:100px;border:1px solid #ccc; border-radius:4px;" />
                            </group>
                        </group>
                        <group cols="2">
                            <group>
                                
                                <field name="relation" />
                                <field name="phone" />
                                <field name="mobile" />
                                <field name="email" />
                                <field name="student_id" />
                                <field name="company_id" />
                                <field name="note" />
                            </group>
                            <group>
                                <field name="occupation" />
                                <field name="date_of_birth" />
                                <field name="age" />
                                <field name="nationality" />
                                <field name="blood_group" />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action to open Parent records -->
        <record id="action_dsl_parent" model="ir.actions.act_window">
            <field name="name">Parents</field>
            <field name="res_model">dsl.study.parent</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>