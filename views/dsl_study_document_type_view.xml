<odoo>
    <data>
        <!-- Document Type Tree View -->
        <record id="view_document_type_tree" model="ir.ui.view">
            <field name="name">dsl.study.document.type.tree</field>
            <field name="model">dsl.study.document.type</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="active"/>
                    <field name="note"/>
                </tree>
            </field>
        </record>

        <!-- Document Type Form View -->
        <record id="view_document_type_form" model="ir.ui.view">
            <field name="name">dsl.study.document.type.form</field>
            <field name="model">dsl.study.document.type</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="active"/>
                            <field name="note"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Document Type Action -->
        <record id="action_document_type" model="ir.actions.act_window">
            <field name="name">Document Types</field>
            <field name="res_model">dsl.study.document.type</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>
