<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Search view -->
        <record id="dsl_study_student_search_view" model="ir.ui.view">
            <field name="name">dsl.study.student.search</field>
            <field name="model">dsl.study.student</field>
            <field name="arch" type="xml">
                <search string="Students">
                    <field name="name" string="Full Name"/>
                    <field name="code" string="Code"/>
                    <field name="email" string="Email"/>
                    <field name="mobile" string="Mobile"/>
                    <filter string="Active" name="active_filter" domain="[('active','=',True)]"/>
                </search>

            </field>
        </record>

        <!-- Tree view -->
        <record id="view_student_tree" model="ir.ui.view">
            <field name="name">dsl.study.student.tree</field>
            <field name="model">dsl.study.student</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="code"/>
                    <field name="name"/>
                    <field name="email"/>
                    <field name="mobile"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <!-- Form view -->
        <record id="view_student_form" model="ir.ui.view">
            <field name="name">dsl.study.student.form</field>
            <field name="model">dsl.study.student</field>
            <field name="arch" type="xml">
                <form>
                    <field name="active" invisible="1"/>
                    <field name="security_money_done" invisible="1"/>
                    <field name="document_charge_id" invisible="1"/>
                    <field name="move_count" invisible="1"/>
                    <field name="move_ids" invisible="1"/>
                    <header>
                        <!-- Status Bar -->
                        <field name="state" widget="statusbar" nolabel="1"
                               options="{'clickable':'1'}"/>
                        <!-- Workflow Buttons -->
                        <button name="action_submit" type="object" string="Submit"
                                class="btn-primary"
                                invisible="state == 'submitted' or state == 'inprogress' or state == 'done' or state == 'cancelled'"/>
                        <button name="action_start" type="object" string="Start" class="btn-primary"
                                invisible="state == 'inprogress' or state == 'done' or state == 'cancelled' or state == 'draft'"/>
                        <button name="action_done" type="object" string="Done" class="btn-primary"
                                invisible="state=='submitted'or state == 'done' or state == 'cancelled' or state == 'draft'"/>
                        <button name="action_cancel" type="object" string="Cancel"
                                class="btn-danger" invisible="state == 'cancelled' or state == 'draft'"/>
                        <button name="action_set_to_draft" type="object" string="Set to Draft"
                                class="btn-secondary" invisible="state == 'draft'"/>

                        <!-- create user button -->
                        <button name="action_create_user" type="object" string="Create User"
                                class="btn-secondary" invisible="user_id != False"/>
                        <!-- security money button     -->
                        <button name="action_security_money" type="object" string="Security Money"
                                class="btn-primary" invisible="security_money_done == True"/>


                        <!--  Document Charge button (disappear once a document_charge is
                        created) -->
                        <button name="action_document_charge"
                                type="object"
                                string="Document Charge"
                                class="btn-primary"
                                invisible="document_charge_id != False"/>

                    </header>

                    <sheet>
                        <!-- button box -->
                        <div class="oe_button_box" name="button_box">


                            <!-- Security Money smart button -->
                            <button name="action_open_security_money"
                                    type="object"
                                    class="oe_stat_button"
                                    icon="fa-money"
                                    string="Security Money"
                                    invisible="security_money_done == False"/>
                            <!-- Invoice smart button -->
                            <button name="action_open_invoices"
                                    type="object"
                                    class="oe_stat_button"
                                    icon="fa-file"
                                    string="Invoices"
                                    invisible="move_count == 0">
                                <field name="move_count" widget="statinfo"/>
                            </button>
                            <!-- Archive -->
                            <button name="toggle_active" type="object" class="oe_stat_button"
                                    icon="fa-archive" invisible="active==False">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_text">Archive</span>
                                </div>
                            </button>
                            <!-- Activate -->
                            <button name="toggle_active" type="object" class="oe_stat_button"
                                    icon="fa-check" invisible="active==True">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_text">Active</span>
                                </div>
                            </button>
                        </div>
                        <!-- end button box -->

                        <!-- code, name, photo head -->
                        <group>
                            <field name="code" readonly="1"/>
                            <group>
                                <div
                                        style="font-size:2em; font-weight:bold; margin-bottom:10px; display:flex; gap:10px; align-items:center;">
                                    <field name="first_name" placeholder="First Name"
                                           style="font-size:1em; width:330px;"/>
                                    <field name="middle_name" placeholder="Middle Name"
                                           style="font-size:1em; width:330px;"/>
                                    <field name="last_name" placeholder="Last Name"
                                           style="font-size:1em; width:330px;"/>
                                </div>
                            </group>
                            <group style="text-align:center; width:180px;">
                                <field name="photo" widget="image" nolabel="1"
                                       style="width:110px; height:100px;border:1px solid #ccc; border-radius:4px;"/>
                            </group>
                        </group>
                        <!-- end code, name, photo head -->

                        <!-- contact info -->
                        <group col="2">
                            <group>
                                <field name="student_id_string"/>

                                <label for="street_page_lead" string="Contact"/>
                                <div class="o_address_format">
                                    <field name="street" id="street_page_lead"
                                           placeholder="Street..." class="o_address_street"/>
                                    <field name="street2" placeholder="Street 2..."
                                           class="o_address_street"/>
                                    <field name="city" placeholder="City" class="o_address_city"/>
                                    <field name="state_id" class="o_address_state"
                                           placeholder="State" options='{"no_open": True}'/>
                                    <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                                    <field name="country_id" placeholder="Country"
                                           class="o_address_country"
                                           options='{"no_open": True, "no_create": True}'/>
                                </div>
                            </group>
                            <group>
                                <field name="mobile" required="1"/>
                                <field name="email"/>
                                <field name="phone"/>
                                <field name="fax"/>
                            </group>
                        </group>
                        <!-- end contact info -->


                        <!-- notebook start -->
                        <notebook>
                            <!-- Personal Info -->
                            <page string="Personal">
                                <group col="2">
                                    <field name="gender"/>
                                    <field name="date_of_birth"/>
                                    <field name="age" readonly="1"/>
                                    <field name="nationality"/>
                                    <field name="blood_group"/>
                                    <field name="lang"/>
                                </group>
                            </page>

                            <!-- Addresses -->
                            <page string="Address info">
                                <field name="address_ids">
                                    <tree>
                                        <field name="type"/>
                                        <field name="street"/>
                                        <field name="street2"/>
                                        <field name="city"/>
                                        <field name="state_id"/>
                                        <field name="country_id"/>
                                        <field name="zip"/>
                                    </tree>
                                </field>
                            </page>

                            <!-- Results -->
                            <page string="Results">
                                <field name="result_ids" context="{'default_student_id': id}"
                                       create="1" edit="1">
                                    <tree>
                                        <field name="exam_type"/>
                                        <field name="institution_name"/>
                                        <field name="department"/>
                                        <field name="grade"/>
                                        <field name="passing_year"/>
                                    </tree>
                                    <!-- creating record from the student  -->
                                    <form
                                            string="Student Result">
                                        <sheet>
                                            <group>
                                                <group>
                                                    <field name="code" readonly="1"/>
                                                    <field name="exam_type"/>
                                                    <field name="institution_name"/>
                                                    <field name="institution_code"/>
                                                    <field name="department"/>
                                                    <field name="education_board_id"/>
                                                    <field name="group_or_major"/>
                                                </group>
                                                <group>
                                                    <field name="grade"/>
                                                    <field name="grade_point"
                                                           invisible="grade != 'gpa'"/>
                                                    <field name="total_mark"
                                                           invisible="grade != 'others'"/>
                                                    <field name="passing_year"/>
                                                    <field name="duration_year"/>
                                                    <field name="marksheet"/>
                                                    <field name="certificate"/>
                                                    <field name="board_roll_number"/>
                                                    <field name="registration_number"/>
                                                    <field name="student_id"/>
                                                </group>
                                            </group>
                                        </sheet>
                                    </form>
                                </field>
                            </page>

                            <!-- Relations -->
                            <page string="Parents">
                                <field name="parent_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="relation"/>
                                        <field name="phone"/>
                                        <field name="mobile"/>
                                        <field name="email"/>
                                        <field name="company_id"/>
                                    </tree>
                                </field>
                            </page>

                            <page string="Sponsors">
                                <group>
                                    <field name="sponsor_guideline_given"/>
                                </group>
                                <field name="sponsor_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="relation"/>
                                        <field name="phone"/>
                                        <field name="mobile"/>
                                        <field name="email"/>
                                        <field name="company_id"/>
                                    </tree>
                                </field>
                            </page>

                            <!-- Backup Countries -->
                            <page string="Backup Countries">
                                <group>
                                    <field name="backup_country_ids" widget="many2many_tags"/>
                                </group>
                            </page>

                            <!-- Documents -->
                            <page string="Document Checkbox">
                                <field name="document_line_ids">
                                    <tree editable="bottom">
                                        <field name="date"/>
                                        <field name="document_type_id"/>
                                        <field name="state"/>
                                        <field name="note"/>
                                    </tree>
                                </field>
                            </page>

                            <!-- Office -->
                            <page string="Office">
                                <group col="2">
                                    <field name="admission_officer_ids" widget="many2many_tags"/>
                                    <field name="user_id"/>
                                    <field name="partner_id"/>
                                    <field name="note"/>
                                </group>
                            </page>

                        </notebook>
                        <!-- notebook end -->

                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action -->
        <record id="action_dsl_student" model="ir.actions.act_window">
            <field name="name">Students</field>
            <field name="res_model">dsl.study.student</field>
            <field name="view_mode">tree,form</field>
            <!-- <field name="target">new</field> -->

        </record>


    </data>
</odoo>