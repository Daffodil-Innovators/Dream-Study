<odoo>
    <template id="student_profile_form" name="Student Profile Form">
        <t t-call="portal.portal_layout">
        <!-- Import Material Icons -->
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet"></link>

        <div style="min-height:100vh; padding:50px 20px; font-family:Arial, sans-serif;">
            <!-- Centered Card -->
            <div style="max-width:700px; margin:auto; background:#ffffff; border-radius:15px; box-shadow:0 6px 20px rgba(0,0,0,0.1); padding:30px;">
                
                <!-- Header -->
                <h1 style="text-align:center; color:#2c6b4f; margin-bottom:30px; font-size:28px; font-weight:bold;">
                    <span class="material-icons" style="vertical-align:middle; color:black; font-size:36px;">account_circle</span>
                    My Profile
                </h1>

                <!-- Success Message -->
                <t t-if="request.params.get('success')">
                    <div style="background-color:#d4edda; color:#155724; padding:15px; border-radius:5px; text-align:center; margin-bottom:20px; font-weight:bold;">
                        âœ… Your profile has been submitted successfully!
                    </div>
                </t>

                <!-- Form -->
                <form action="/my/profile/submit" method="POST" enctype="multipart/form-data" style="display:flex; flex-direction:column; gap:20px;">
                    <!-- CSRF Token -->
                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                    <!-- Name -->
                    <div style="display:flex; gap:10px; margin-bottom:15px;">
                        <div style="flex:1;">
                            <label style="font-weight:bold; display:flex; align-items:center; gap:6px;">
                                <span class="material-icons" style="color:black; font-size:22px;">person</span> First Name
                            </label>
                            <input type="text" name="first_name" placeholder="First Name" required="required"
                                style="width:100%; padding:12px; border:1px solid #ccc; border-radius:8px;"/>
                        </div>
                        <div style="flex:1;">
                            <label style="font-weight:bold;">Middle Name</label>
                            <input type="text" name="middle_name" placeholder="Middle Name"
                                style="width:100%; padding:12px; border:1px solid #ccc; border-radius:8px;"/>
                        </div>
                        <div style="flex:1;">
                            <label style="font-weight:bold;">Last Name</label>
                            <input type="text" name="last_name" placeholder="Last Name"
                                style="width:100%; padding:12px; border:1px solid #ccc; border-radius:8px;"/>
                        </div>
                    </div>

                    <!-- Email -->
                    <div>
                        <label style="font-weight:bold; display:flex; align-items:center; gap:8px;">
                            <span class="material-icons" style="color:black; font-size:22px;">email</span> Email
                        </label>
                        <input type="email" name="email" placeholder="you@example.com" required="required"
                            style="width:100%; padding:12px; border:1px solid #ccc; border-radius:8px;"/>
                    </div>

                    <!-- Phone -->
                    <div>
                        <label style="font-weight:bold; display:flex; align-items:center; gap:8px;">
                            <span class="material-icons" style="color:black; font-size:22px;">phone</span> Phone Number
                        </label>
                        <input type="text" name="phone" placeholder="+880123456789"
                            style="width:100%; padding:12px; border:1px solid #ccc; border-radius:8px;"/>
                    </div>

                    <!-- Address -->
                    <div>
                        <label style="font-weight:bold; display:flex; align-items:center; gap:8px;">
                            <span class="material-icons" style="color:black; font-size:22px;">home</span> Address
                        </label>
                        <textarea name="address" rows="3" placeholder="Your Address"
                            style="width:100%; padding:12px; border:1px solid #ccc; border-radius:8px;"></textarea>
                    </div>

                    <!-- Photo Upload -->
                    <div>
                        <label style="font-weight:bold; display:flex; align-items:center; gap:8px;">
                            <span class="material-icons" style="color:black; font-size:22px;">photo_camera</span> Profile Image
                        </label>
                        <input type="file" name="photo" accept="image/*"
                            style="width:100%; padding:10px; border:1px solid #ccc; border-radius:8px;"/>
                    </div>

                    <!-- Preferred Country -->
                    <div>
                        <label style="font-weight:bold; display:flex; align-items:center; gap:8px;">
                            <span class="material-icons" style="color:black; font-size:22px;">public</span> Preferred Country
                        </label>
                        <select name="country" style="width:100%; padding:12px; border:1px solid #ccc; border-radius:8px;">
                            <option value="">Select Country</option>
                            <t t-foreach="countries" t-as="c">
                                <option t-att-value="c.id"><t t-esc="c.name"/></option>
                            </t>
                        </select>
                    </div>

                    <!-- Admission Officer -->
                    <div>
                        <label style="font-weight:bold; display:flex; align-items:center; gap:8px;">
                            <span class="material-icons" style="color:black; font-size:22px;">badge</span> Admission Officer
                        </label>
                        <select name="officer" style="width:100%; padding:12px; border:1px solid #ccc; border-radius:8px;">
                            <option value="">Select Officer</option>
                            <t t-foreach="officers" t-as="o">
                                <option t-att-value="o.id"><t t-esc="o.name"/></option>
                            </t>
                        </select>
                    </div>

                    <!-- Submit Button -->
                    <div style="text-align:center; margin-top:10px;">
                        <button type="submit"
                            style="background-color:#28a745; color:white; padding:14px 40px; border:none; border-radius:10px; font-size:16px; font-weight:bold; cursor:pointer; transition:0.3s;">
                            Submit
                        </button>
                    </div>
                </form>
            </div>
        </div>
        </t>
    </template>
</odoo>
